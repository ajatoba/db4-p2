<?xml version="1.0" encoding="ISO-8859-1" ?>

<!DOCTYPE form-validation PUBLIC
          "-//Apache Software Foundation//DTD Commons Validator Rules Configuration 1.1.3//EN"
          "http://jakarta.apache.org/commons/dtds/validator_1_1_3.dtd">

<form-validation>

    <global>

    </global>

    <formset>

        <form name="AssinanteForm">
            <field
                property="VC_EMAIL_ASSINANTE"
                depends="required,mask">
                    <arg key="VC_EMAIL_ASSINANTE"/>
                    <var>
                    <var-name>mask</var-name>
                    <var-value>^[a-z A-Z]{3,35}$</var-value>
                    </var>
            </field>
            <field
                property="VC_PASSWORD_ASSINANTE"
                depends="required,mask">
                    <arg key="VC_PASSWORD_ASSINANTE"/>
                    <var>
                        <var-name>mask</var-name>
                        <var-value>^[0-9]{1,3}$</var-value>
                    </var>
            </field>
        </form>
        
        <form name="LoginAssinanteForm">
            <field
                property="VC_EMAIL_ASSINANTE"
                depends="required,mask">
                    <arg key="VC_EMAIL_ASSINANTE"/>
                    <var>
                    <var-name>mask</var-name>
                    <var-value>^[a-z A-Z]{3,35}$</var-value>
                    </var>
            </field>
            <field
                property="VC_PASSWORD_ASSINANTE"
                depends="required,mask">
                    <arg key="VC_PASSWORD_ASSINANTE"/>
                    <var>
                        <var-name>mask</var-name>
                        <var-value>^[0-9]{1,3}$</var-value>
                    </var>
            </field>
        </form>

    </formset> 

</form-validation>
