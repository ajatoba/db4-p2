<!DOCTYPE struts-config PUBLIC   
      "-//Apache Software Foundation//DTD Struts Configuration 1.1//EN"  
      "http://jakarta.apache.org/struts/dtds/struts-config_1_1.dtd" >   
      
<struts-config>
   
    <!-- Form Bean Definitions -->   
    <form-beans>   
       <form-bean name="assinanteForm" type="esseecraque.form.AssinanteForm"/>
       <form-bean name="assinanteLoginForm" type="esseecraque.form.AssinanteLoginForm"/>
       <form-bean name="videoForm" type="esseecraque.form.VideoForm"/>
    </form-beans>
    
    <!-- Action Mapping Definitions -->   
    <action-mappings>
       
        <action path="/cadAssinanteForm" forward="/cadAssinanteForm.jsp" />
        <action path="/cadVideoForm" forward="/pages/cadVideoForm.jsp" />
        <action path="/editarPerfilForm" forward="/pages/editarPerfil.jsp" />
        <action path="/valtarHome" forward="/pages/home.jsp" />
        <action path="/minhaConta" forward="/pages/minhaConta.jsp" />
        
        <action path="/welcome" 
        	type="esseecraque.action.VideoAction"
        	parameter="act">
        	<forward name="carrega_home" path="/home.jsp" />
        </action>
        
        <action path="/busca" 
        	type="esseecraque.action.BuscaAction"
        	parameter="act">
        	<forward name="resultado_busca" path="/resultado_busca.jsp" />
        </action>
        
        <action path="/player" 
        	type="esseecraque.action.VideoAction"
        	parameter="act">
        	<forward name="player_secao_liberada" path="/player.jsp" />
        	<forward name="player_secao_restrita" path="/pages/player.jsp" />
        </action>
			
        <action input="/cadAssinanteForm.jsp"
        	path="/cadAssinante"  
            type="esseecraque.action.AssinanteAction"  
            name="assinanteForm"
            parameter="act"  
            scope="request"  
            validate="true">   
            	<forward name="assinante_add_sucesso" path="/addAssinanteSucesso.jsp" />
            	<forward name="assinante_add_error" path="/addAssinanteError.jsp" />   
        </action>
        
        <action input="/pages/editarPerfil.jsp"
        	path="/editAssinante"  
            type="esseecraque.action.AssinanteAction"  
            name="assinanteForm"
            parameter="act"  
            scope="request"  
            validate="true">   
            	<forward name="assinante_edit_sucess" path="/pages/editarPerfilSucesso.jsp" />
            	<forward name="assinante_edit_error" path="/pages/editarPerfilErro.jsp" />   
        </action>
        
        <action input="/pages/cadVideoForm.jsp"
        	path="/uploadVideo"  
            type="esseecraque.action.VideoAction"  
            name="videoForm"
            parameter="act"  
            scope="request"  
            validate="true">   
            	<forward name="assinante_edit_sucess" path="/pages/editarPerfilSucesso.jsp" />
            	<forward name="assinante_edit_error" path="/pages/editarPerfilErro.jsp" />   
        </action>
        
        <action input="/login.jsp"
        	path="/loginAssinante"  
            type="esseecraque.action.AssinanteAction"  
            name="assinanteLoginForm"
            parameter="act"  
            scope="request"  
            validate="true">   
            	<forward name="login_sucess" path="/pages/home.jsp" />
            	<forward name="login_error" path="/homeGerenciador.jsp" />
        </action>
        
        <action path="/listMeusVideos"  
            type="esseecraque.action.VideoAction"  
            parameter="act"  
            scope="request"  
            validate="true">   
            	<forward name="list_meus_videos_sucess" path="/pages/listMeusVideos.jsp" />
            	<forward name="list_meus_videos_erro" path="/pages/listMeusVideosErro.jsp" />   
        </action>
        
        <action path="/excluirVideo"  
            type="esseecraque.action.VideoAction"  
            parameter="act"  
            scope="request"  
            validate="true">   
            	<forward name="video_excluir_resp" path="/pages/excluirVideo.jsp" />
            	<forward name="excluir_video_error" path="/pages/excluirVideoError.jsp" />   
        </action>
        
        <action path="/excluirVideoSim"  
            type="esseecraque.action.VideoAction"  
            parameter="act"  
            scope="request"  
            validate="true">   
            	<forward name="list_meus_videos_sucess" path="/pages/listMeusVideos.jsp" />
            	<forward name="excluir_video_error" path="/pages/excluirVideoError.jsp" />   
        </action>
           
    </action-mappings>
    
    <controller nocache="true" />
    
    <message-resources parameter="esseecraque.resources.ApplicationResources" />
    
    <plug-in className="org.apache.struts.validator.ValidatorPlugIn">
        <set-property
        property="pathnames"
        value="/WEB-INF/validator-rules.xml,/WEB-INF/validation.xml"/>
    </plug-in>
        
</struts-config>